{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "paths": {
            "@app/*": [
                "./src/*"
            ]
        },
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "es6",
        "outDir": "./dist",
        "baseUrl": "./src",
        "resolveJsonModule": true
    },
    "include": [
        "src/index.ts",
        "**/*.ts"
    ]
}